# AWS Configuration for Repository Backup
# Copy this file to .env and add your actual credentials

# S3 Bucket Configuration
AWS_S3_BUCKET=your-bucket-name-here
AWS_REGION=us-west-2
AWS_PROFILE=default

# S3 Settings
S3_PREFIX=repos
S3_USE_VERSIONING=true
S3_STORAGE_CLASS=STANDARD

# Backup Settings
BACKUP_METHOD=direct
PARALLEL_WORKERS=5
EXCLUDE_PERSONAL=false

# Local Backup Settings
LOCAL_BACKUP_PATH=/mnt/backups/repo-backup

# Working Directory (for temporary files during clone/bundle operations)
# WORK_DIR=/var/tmp

# Repository Tokens (add your tokens here)
# GITHUB_TOKEN=ghp_your_token_here
# GITHUB_INCLUDE_ORGS=org1,org2,user

# GITLAB_TOKEN=glpat_your_token_here
# GITLAB_URL=https://gitlab.com
# GITLAB_INCLUDE_GROUPS=group1,group2

# BITBUCKET_USERNAME=your_username
# BITBUCKET_TOKEN=your_workspace_token_here
# BITBUCKET_URL=https://bitbucket.org
# BITBUCKET_INCLUDE_GROUPS=workspace1,workspace2